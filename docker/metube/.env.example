# MeTube Video Downloader Environment Variables
# Copy this file to .env and update with your values

# Output filename template for downloaded videos
OUTPUT_TEMPLATE=%(title)s.%(ext)s

# User and Group IDs for file permissions
PUID=1000
PGID=1000

# Base domain for Traefik routing
TRAEFIK_BASE_DOMAIN=example.com

# File permission mask
UMASK=002

# yt-dlp options (JSON format)
YTDL_OPTIONS={}

# Media storage path for downloads
MEDIA_PATH=/mnt/media