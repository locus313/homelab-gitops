# Code-Server Environment Variables
# Copy this file to .env and update with your values

# Default workspace directory inside code-server
DEFAULT_WORKSPACE=/config/workspace

# Base path for Docker volumes
DOCKER_BASE_PATH=/docker

# Code-server web interface password
PASSWORD=your_secure_password_here

# User and Group IDs for file permissions
PUID=1000
PGID=1000

# Sudo password for terminal access within code-server
SUDO_PASSWORD=your_sudo_password_here

# Tailscale configuration for secure remote access
TS_AUTHKEY=your_tailscale_auth_key_here
TS_EXTRA_ARGS="--advertise-tags=tag:container --reset"
TS_SERVE_CONFIG=/config/code-server.json
TS_STATE_DIR=/var/lib/tailscale
TS_USERSPACE=false

# Timezone
TZ=America/Los_Angeles