# Beszel Monitoring Environment Variables
# Copy this file to .env and update with your values

# Public key for Beszel agent authentication
# Generate during initial Beszel setup
BESZEL_PUBLIC_KEY=your_beszel_public_key_here

# Base path for Docker volumes
DOCKER_BASE_PATH=/docker

# Timezone setting
TZ=America/Los_Angeles

# Base domain for Traefik routing
TRAEFIK_BASE_DOMAIN=example.com

# Optional: Exclude containers from monitoring (comma-separated glob patterns)
# Example: EXCLUDE_CONTAINERS=*test*,nginx-*,temp-*
# EXCLUDE_CONTAINERS=

# Optional: Control access to container logs and info APIs (default: true)
# Set to false to disable container details for security
# CONTAINER_DETAILS=true

# Optional: Specify Intel GPU device for monitoring
# Example: INTEL_GPU_DEVICE=/dev/dri/card0
# INTEL_GPU_DEVICE=