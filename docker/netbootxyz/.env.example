# NetbootXYZ Network Boot Server Environment Variables
# Copy this file to .env and update with your values

# Base path for Docker volumes
DOCKER_BASE_PATH=/docker

# Internal nginx port (usually 80)
NGINX_PORT=80

# User and Group IDs for file permissions
PUID=1000
PGID=1000

# Base domain for Traefik routing
TRAEFIK_BASE_DOMAIN=example.com

# Timezone
TZ=America/Los_Angeles

# Web application port (usually 3000)
WEB_APP_PORT=3000