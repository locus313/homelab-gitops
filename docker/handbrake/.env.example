# HandBrake Video Transcoder Environment Variables
# Copy this file to .env and update with your values

# Base path for Docker volumes
DOCKER_BASE_PATH=/docker

# User and Group IDs for file permissions (use PUID/PGID for consistency)
PUID=1000
PGID=1000

# Base domain for Traefik routing
TRAEFIK_BASE_DOMAIN=example.com

# Timezone
TZ=America/Los_Angeles

# File permission mask
UMASK=0022

# Media storage paths
MEDIA_PATH=/mnt/media
BACKUP_PATH=/mnt/backups