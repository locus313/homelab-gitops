# Stirling PDF Toolkit Environment Variables
# Copy this file to .env and update with your values

# Base path for Docker volumes
DOCKER_BASE_PATH=/docker

# Security settings
DOCKER_ENABLE_SECURITY=true
SECURITY_ENABLELOGIN=true
SECURITY_INITIALLOGIN_USERNAME=admin
SECURITY_INITIALLOGIN_PASSWORD=stirling
SECURITY_CSRFDISABLED=true

# Feature settings
INSTALL_BOOK_AND_ADVANCED_HTML_OPS=false
METRICS_ENABLED=true

# User and Group IDs for file permissions
PUID=1000
PGID=1000

# System configuration
SYSTEM_DEFAULTLOCALE=en-US
SYSTEM_MAXFILESIZE=2000
SYSTEM_GOOGLEVISIBILITY=false

# Base domain for Traefik routing
TRAEFIK_BASE_DOMAIN=example.com