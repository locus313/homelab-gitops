# Homarr Dashboard Environment Variables
# Copy this file to .env and update with your values

# Base path for Docker volumes
DOCKER_BASE_PATH=/docker

# User and Group IDs for file permissions
PUID=1000
PGID=1000

# Secret encryption key for secure data storage
# Generate with: openssl rand -hex 32
SECRET_ENCRYPTION_KEY=your_32_character_hex_encryption_key_here

# Base domain for Traefik routing
TRAEFIK_BASE_DOMAIN=example.com